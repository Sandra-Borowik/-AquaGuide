@page
@model AquaGuide.Pages.Database.AddPostModel
@{
    ViewData["Title"] = "AddPost";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Add Your post!</h1>

<br />
<br />

<div>
    <h2 class="text-info">Post:</h2>

    <form method="post">

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Post.Author"></label>
            </div>
            <div class="col-5">
                <input asp-for="Post.Author" class="form-control" />
            </div>
            <span asp-validation-for="Post.Author" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Post.Title"></label>
            </div>
            <div class="col-5">
                <input asp-for="Post.Title" class="form-control" />
            </div>
            <span asp-validation-for="Post.Title" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Post.Text"></label>
            </div>
            <div class="col-5">
                <input asp-for="Post.Text" class="form-control" />
            </div>
            <span asp-validation-for="Post.Text" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-5 offset-2">
                <div class="row">
                    <div class="col-6">
                        <input type="submit" class="btn btn-info form-control" value="Share" />
                    </div>
                </div>
            </div>
        </div>

    </form>

</div>

@section scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
