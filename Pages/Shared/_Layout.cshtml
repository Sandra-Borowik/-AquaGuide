<!DOCTYPE html>
@using AquaGuide2.Utility
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, mbr-bg-black" />
    <title>@ViewData["Title"] - AquaGuide</title>
    <link rel="stylesheet" href="~/1boot.min.css" type="text/css" />
    <link rel="stylesheet" href="~/2min.css.css" type="text/css" />
    <link rel="stylesheet" href="~/3grid.min.css.css" type="text/css" />
    <link rel="stylesheet" href="~/4reboot.min.css.css" type="text/css" />
    <link rel="stylesheet" href="~/5style.css" type="text/css" />
    <link rel="stylesheet" href="~/6styles.css" type="text/css" />
    <link rel="stylesheet" href="~/7theme.css" type="text/css" />
    <link rel="stylesheet" href="~/lmao" type="text/css" />
    <link rel="stylesheet" href="assets/tether/tether.min.css">
    <link rel="stylesheet" href="assets/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="assets/bootstrap/css/bootstrap-grid.min.css">
    <link rel="stylesheet" href="assets/bootstrap/css/bootstrap-reboot.min.css">
    <link rel="stylesheet" href="assets/dropdown/css/style.css">
    <link rel="stylesheet" href="assets/socicon/css/styles.css">
    <link rel="stylesheet" href="assets/theme/css/style.css">
    <link rel="preload" href="https://fonts.googleapis.com/css?family=Jost:100,200,300,400,500,600,700,800,900,100i,200i,300i,400i,500i,600i,700i,800i,900i&display=swap" as="style" onload="this.onload=null;this.rel='stylesheet'">
    <noscript><link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Jost:100,200,300,400,500,600,700,800,900,100i,200i,300i,400i,500i,600i,700i,800i,900i&display=swap"></noscript>
    <link rel="preload" as="style" href="assets/mobirise/css/mbr-additional.css">
    <link rel="stylesheet" href="assets/mobirise/css/mbr-additional.css" type="text/css">
</head>

<body style="background-color:black;
             margin-top:2.0em;
             margin-left:2.0em">
    <section class="mbr-bg-black" style="background-color:black">
        <section class="menu cid-s48OLK6784" once="menu" style="background-color:black">
            <div class="mbr-overlay" style="opacity:0; background-color: rgb(255 255 255);"></div>
            <nav class="navbar navbar-dropdown navbar-expand-lg"
                 style="background-color:black">
                <div class="container-fluid" style="background-color:black">
                    <div class="navbar-brand">
                        <span class="navbar-logo">
                            <a>
                                <img src="~/assets/images/mbr-60x99.png" style="height: 3.8rem;">
                            </a>
                        </span>
                        <span class="navbar-caption-wrap">
                            <a class="navbar-brand text-white" asp-area="" asp-page="/Index">AquaGuide</a>
                        </span>
                    </div>
                    <div class="navbar-nav nav-dropdown nav-left" id="navbarSupportedContent" style="background-color:black">
                        <ul class="nav nav-right" data-app-modern-menu="true" style="background-color:black">
                            @if (User.IsInRole(SD.AdminEndUser))
                            {
                                <li class="nav-item">
                                    <a class="nav-link link text-white" asp-area="" asp-page="/UserBase/Index">Users Database</a>
                                </li>
                            }
                            @if (User.IsInRole(SD.PersonEndUser))
                            {
                                <li class="nav-item">
                                    <a class="nav-link link text-white" asp-area="" asp-page="/FishBase/Index">Your Crew</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link link text-white" asp-area="" asp-page="/ParameterBase/Index">Your Parameters</a>
                                </li>
                            }
                        </ul>
                            <partial name="_LoginPartial" />
                    </div>
                </div>
            </nav>
        </section>

        <div>
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>

        @RenderSection("Scripts", required: false)

        <section class="footer mbr-bg-black align-center">
            <div class="container mbr-bg-black">
                <div class="media-container-row align-center mbr-white bg-black">
                    <div class="col-12">
                        <p class="mbr-text mb-0 mbr-fonts-style" style="opacity:0.2">
                            ©AquaGuide 2021
                        </p>
                    </div>
                </div>
            </div>
        </section>
    </section>
</body>
</html>
